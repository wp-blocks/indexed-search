{
  "extends": "@wp-blocks/tsconfig",
  "compilerOptions": {
    "rootDir": "./client/src",
    "outDir": "./build-types",

    "strict": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,

    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./client/src/**/*", "./src/block.json"],
  "exclude": ["**/*.test.ts"]
}
